{
    "name":        "arcanedev/notify",
    "description": "Easy notifications and flash messages Helper",
    "keywords":    ["arcanedev", "notify", "flash", "sweetalert", "sweet-alert", "laravel"],
    "homepage":    "https://github.com/ARCANEDEV/Notify",
    "authors": [
        {
            "name":     "ARCANEDEV",
            "email":    "arcanedev.maroc@gmail.com",
            "homepage": "https://github.com/ARCANEDEV",
            "role":     "Developer"
        }
    ],
    "type":    "library",
    "license": "MIT",
    "require": {
        "php":                 ">=5.5.9",
        "arcanedev/support":   "~3.0"
    },
    "require-dev": {
        "orchestra/testbench": "~3.1",
        "phpunit/phpcov":      "~2.0",
        "phpunit/phpunit":     "~4.0|~5.0"
    },
    "autoload": {
        "psr-4": {
            "Arcanedev\\Notify\\": "src/"
        },
        "files": ["helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Arcanedev\\Notify\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0-dev"
        }
    }
}
